<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.cruises.controller.ticket.TicketController"
      spacing="10" alignment="TOP_LEFT" prefWidth="800">

    <Label text="Ticket Management" style="-fx-font-size: 24px;" />

    <GridPane hgap="10" vgap="10" alignment="TOP_LEFT">

        <Label text="Passenger:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 16px;" />
        <ComboBox fx:id="passengerComboBox" promptText="Select Passenger"
                  GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Cruise:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 16px;" />
        <ComboBox fx:id="cruiseComboBox" promptText="Select Cruise"
                  GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Cashier:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 16px;" />
        <ComboBox fx:id="cashierComboBox" promptText="Select Cashier"
                  GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Total Price:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-size: 16px;" />
        <TextField fx:id="ticketPriceField" promptText="Enter Price"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="20" alignment="TOP_LEFT">
        <Button fx:id="addTicketButton" text="Add Ticket" onAction="#addTicket" style="-fx-font-size: 16px;" />
        <Button fx:id="cancelEditButton" text="Cancel Edit" onAction="#cancelEdit" visible="false" style="-fx-font-size: 16px;" />
    </HBox>

    <TableView fx:id="ticketTable" prefHeight="400" prefWidth="780">
        <columns>
        </columns>
    </TableView>
</VBox>
