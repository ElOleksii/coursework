<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.cruises.controller.passenger.PassengerController"
      spacing="10">
    <children>
        <Label text="Passenger Management" style="-fx-font-size: 24px;" />


        <HBox spacing="10">
            <TextField fx:id="passengerNameField" promptText="Enter Passenger Name" />
            <TextField fx:id="passengerPhoneNumberField" promptText="Enter Phone Number" />
            <HBox spacing="20" alignment="TOP_LEFT">
                <Button fx:id="addPassengerButton" text="Add Cruise" onAction="#addPassenger" style="-fx-font-size: 16px;" />
                <Button fx:id="cancelEditButton" text="Cancel Edit" onAction="#cancelEdit" visible="false" style="-fx-font-size: 16px;" />
            </HBox>
        </HBox>

        <TableView fx:id="passengerTable">
            <columns>
            </columns>
        </TableView>
    </children>
</VBox>

