<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.cruise.controller.passenger.EditPassengerController"
      spacing="10" alignment="TOP_LEFT" style="-fx-padding: 20; -fx-background-color: #f9f9f9;">

    <Label text="Edit Passenger" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="fullNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Enter Full Name"/>

        <Label text="Phone Number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneNumberField" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Enter Phone Number"/>

        <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="addressField" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Enter Address"/>

        <Label text="Ticket ID:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="ticketIdField" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="Enter Ticket ID"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Save" onAction="#saveChanges" />
        <Button text="Cancel" onAction="#cancel" />
    </HBox>
</VBox>
