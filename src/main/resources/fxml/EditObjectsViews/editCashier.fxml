<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.cruise.controller.cashier.EditCashierController"
      spacing="10"
      alignment="CENTER"
      style="-fx-padding: 20;">

    <Label text="Edit Cashier" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="fullNameField" promptText="Enter full name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Phone Number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneNumberField" promptText="Enter phone number" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Organization:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="organizationField" promptText="Enter organization name" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Shift:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <CheckBox fx:id="shiftCheckBox" text="Day Shift" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#saveChanges" />
        <Button text="Cancel" onAction="#cancel" />
    </HBox>
</VBox>
