<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.cruise.controller.ticket.EditTicketController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Edit Ticket" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Ship Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="shipNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Departure Port:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="departurePortField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Arrival Port:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="arrivalPortField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <DatePicker fx:id="ticketDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Cabin Class:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="cabinClassField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#saveChanges" />
        <Button text="Cancel" onAction="#cancel" />
    </HBox>
</VBox>
