<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.cruise.controller.HomeViewController"
      spacing="20"
      alignment="CENTER"
      style="-fx-padding: 20;">

    <!-- Title -->
    <Label text="Home View"
           style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Buttons -->
    <Button text="Create Object"
            onAction="#onCreateObject"
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" />

</VBox>
