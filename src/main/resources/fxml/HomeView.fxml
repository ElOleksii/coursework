<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      spacing="30"
      alignment="CENTER"
      style="-fx-padding: 40; -fx-background-color: #ecf0f1;">

    <!-- Welcome Section -->
    <Label text="Welcome to Cruise Management System"
           textAlignment="CENTER"
           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 2, 0, 0, 1);" />

    <Label text="Streamline your workflow and manage your operations seamlessly."

           textAlignment="CENTER"
           style="-fx-font-size: 20px; -fx-font-weight: normal; -fx-text-fill: #34495e; -fx-text-alignment: CENTER;" />

    <Label text="Select a section from the navigation menu on the left to get started."

           textAlignment="CENTER"
           style="-fx-font-size: 18px; -fx-font-weight: normal; -fx-text-fill: #2c3e50; -fx-text-alignment: CENTER;" />

    <!-- Footer -->
    <Label text="We are here to simplify your cruise management experience."
           textAlignment="CENTER"
           style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d; -fx-text-alignment: CENTER;" />

</VBox>
